<%- include("./partials/headers") %>

<nav class="navbar bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Todo App</a>
  </div>
</nav>


<div class="container mt-5">

    <form action="/add/todo" method="post" class="d-flex">
        <input type="text" name="todo" id="" placeholder="Enter Todo" class="form-control">
        <input type="submit" value="Add" class="btn btn-md btn-primary mx-3">

    </form>


    <ul class="list-group mt-5">

        <% todo.forEach(todos => { %>
            <div class="d-flex mt-1">

                <li class="list-group-item w-100"><%= todos.todo_list %></li>
                <a href="/delete/todo/<%= todos.id  %>" class="btn btn-danger btn-sm mx-3">Delete</a>
            </div>
        <% });  %> 
      </ul>
</div>



<%- include("./partials/footers") %>
